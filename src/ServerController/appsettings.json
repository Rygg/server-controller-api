{
  "AssettoCorsa": {
    "ServerRootDirectory": "",
    "TracksLocation": "content\\tracks\\",
    "ServerConfigurationFile": "cfg\\server_cfg.ini",
    "ProcessName": "acServer",
    "ProcessExecutable": "acServer.exe"
  },
  "CounterStrike": {
    "ServerRootDirectory": "",
    "ProcessName": "srcds",
    "ProcessExecutable": "srcds.exe",
    "LaunchArguments": "-game csgo" 
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
    },
    "Console": {
      "IncludeScopes": false,
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
      }
    },
    "Serilog": {
      "Using": [ "Serilog.Sinks.File" ],
      "MinimumLevel": {
        "Default": "Information",
        "Override": {
          "Microsoft.AspNetCore": "Warning",
          "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
        }
      },
      "WriteTo": [
        {
          "Name": "File",
          "Args": {
            "path": "Logs/servercontroller.log",
            "rollingInterval": "Day"
          }
        }
      ]
    }
  },
  "AllowedHosts": "*"
}
